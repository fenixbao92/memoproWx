<!--index.wxml-->
<view class="container">
  <view>
    <navigator class="index-intro__btn btn btn-danger btn-md" url="/pages/order/order">进入商城</navigator>
    <view class="btn-area" id="buttonContainer">
      <button type="default" bindtap='login'>login</button>
      <button type="default" bindtap='getUserInfo'>getUserInfo</button>
      <button type="default" bindtap='getSetting'>getSetting</button>
      <button open-type='getUserInfo' bindgetuserinfo='bindgetuserinfo'>auth</button>
      <button type="default" bindtap='sendTestHttp'>sendTestHttp</button>

      <modal show="{{showModal}}" height='60%' bindcancel="modalCancel" bindconfirm='modalConfirm'>
        <view class="section">
          <view class="section__title">你输入的是：{{inputValue}}</view>
          <input bindinput="bindKeyInput" placeholder="输入同步到view中" />
        </view>
      </modal>
      
    </view>
  </view>
  <view class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view>
</view>